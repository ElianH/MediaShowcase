<Window x:Class="MediaShowcase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        xmlns:local="clr-namespace:MediaShowcase"
        WindowState="Maximized"
        WindowStyle="None" 
        ResizeMode="NoResize"
        x:Name="This">

    <!--
        WindowStyle="None" 
        WindowState="Maximized"
        ResizeMode="NoResize"
    -->
    
    <Grid Background="Black" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <local:ConfigurationPanel x:Name="MyConfigurationPanel" Visibility="Hidden"/>
        <local:SlideshowPanel x:Name="MySlideshowPanel" Visibility="Hidden"/>

    </Grid>
</Window>
